{
	"name": "azure-keyvault-secrets",
	"version": "0.1.0",
	"description": "Get all the Azure KeyVault Secrets and inject them as Environment variables for your github actions",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cjlapao/azure-keyvault-action"
	},
	"homepage": "https://github.com/cjlapao/azure-keyvault-action#readme",
	"author": {
		"name": "cjlapao",
		"email": "cjlapao@gmail.com",
		"url": "https://github.com/cjlapao"
	},
	"bugs": {
		"url": "https://github.com/cjlapao/azure-keyvault-action/issues"
	},
	"engines": {
		"node": ">=20"
	},
	"main": "index.js",
	"scripts": {
		"prepare": "ncc build index.js -o dist --source-map --license licenses.txt",
		"ci-test": "jest --runInBand",
		"uglyfy": "uglifyjs ./dist/index.js -o ./dist/index.js",
		"format:write": "prettier --write **/*.ts",
		"format:check": "prettier --check **/*.ts",
		"lint": "npx eslint . -c ./.github/linters/.eslintrc.yaml",
		"package": "ncc build src/index.ts --license licenses.txt",
		"package:watch": "npm run package -- --watch",
		"test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
		"all": "npm run format:write && npm run lint && npm run test && npm run package"
	},
	"keywords": [
		"Get Azure KeyVault Secrets",
		"github-action",
		"azure-keyvault",
		"secrets",
		"azure",
		"keyvault"
	],
	"exports": {
		".": "./dist/index.js"
	},
	"license": "fair.io",
	"eslintConfig": {
		"extends": "./.github/linters/.eslintrc.yaml"
	},
	"jest": {
		"verbose": true,
		"clearMocks": true,
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"testMatch": [
			"**/*.test.ts"
		],
		"testPathIgnorePatterns": [
			"/node_modules/",
			"/dist/"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"coverageReporters": [
			"json-summary",
			"text",
			"lcov"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"./src/**"
		]
	},
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@azure/identity": "^4.3.0",
		"@azure/keyvault-secrets": "^4.8.0",
		"@types/node": "^20.14.10"
	},
	"devDependencies": {
		"@babel/core": "^7.24.7",
		"@babel/eslint-parser": "^7.24.7",
		"@babel/preset-env": "^7.24.7",
		"@types/jest": "^29.5.12",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^20.14.10",
		"@vercel/ncc": "^0.38.1",
		"babel-preset-jest": "^29.6.3",
		"eslint": "^8.0.1",
		"eslint-plugin-github": "^5.0.1",
		"eslint-plugin-jest": "^28.6.0",
		"jest": "^29.7.0",
		"prettier": "^3.3.2",
		"ts-jest": "^29.1.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.3",
		"uglify-js": "^3.18.0"
	}
}
